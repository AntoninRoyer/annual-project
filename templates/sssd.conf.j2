[sssd]
config_file_version = 2
services = nss, pam
domains = example.com

[domain/example.com]
id_provider = ldap
ldap_uri = ldaps://ldap.example.com
ldap_search_base = dc=example,dc=com
ldap_default_bind_dn = cn=nss-service,dc=example,dc=com
ldap_default_authtok = SuperSecretPassword
ldap_tls_cacert = /etc/openldap/certs/ca-certificates.crt

