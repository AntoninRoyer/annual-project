  - name: www-data
    service: apache2
    shell: /sbin/nologin

  - name: nginx
    service: nginx
    shell: /sbin/nologin

  - name: mysql
    service: mysql
    shell: /sbin/nologin

  - name: php-fpm
    service: php-fpm
    shell: /sbin/nologin

  - name: nobody
    action: disable  # Special case to handle nobody account

